extends layout

block content
  script(src='/javascripts/jquery-3.1.1.min.js')
  .left-content
    .nav
      ul.nav-v-list
        each item in ['Centralized Operational Manual','Corporate Quality','Conference Room Booking','DMS','EHR','E-log','Flight Schedule' , 'Flight Information Board' ,'Flight OPS Mannual' , 'ILearning' ,'Safety Zone'  , 'SAMSS', 'Trainning Information' , 'OA']
          li.list-item: a=item
  .content
    .nav
      ul.nav-h-list
        each item in ['Home','Telephone','Services','Departments','Download']
          li.list-item: a=item
        form
          input#teleipt(autocomplete='off')
  #test
  button#request request
  script.
    $(document).ready(function(){
      $("#request").on('click',function(e){e.preventDefault();request();});
    });
    function request() {
      $.ajax({
        method: 'get',
        url: '/db',
      }).done(function (msg) {
        $('#test').html(msg);
      });
    }

  style.
    .left-content {
      width: 220px;
      min-height: 465px;
      top:0;
      left:0;
      float: left;
    }
    .content {
      margin-left: 220px;
    }